{
    "compilerOptions": {
        "module": "commonjs",
        "jsx": "react",
        "esModuleInterop": true,
        "target": "es6",
        // https://github.com/gdi2290/angular-starter/issues/931#issuecomment-244001423
        // added the below "lib" to fix .includes()
        "lib": [
            "dom",
            "es7"
          ],
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "src/*/__mocks__"
    ]
}